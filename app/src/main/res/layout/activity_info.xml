<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"

    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.protocentral.heartypatch.app.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.56"
            android:textColor="@drawable/default_textcolor"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_stat_name" />

        <TextView
            android:id="@+id/BatteryTextView"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@drawable/default_textcolor" />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/infoListView"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="#ffffff"
        android:groupIndicator="@null"
        android:visibility="gone" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="156dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mean RR"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/MeanRRTextView"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:text="40"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="64sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="msec "
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.49"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heart Rate"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/HRTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="64sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bpm"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.49"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PNN50"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/PNNTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.49"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDNN"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/SDNNTextView"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:text="40"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_light"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.49"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RMSSD"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/RMSSDTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="36sp"
                android:textStyle="bold" />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.49"
            android:orientation="vertical">

            <Switch
                android:id="@+id/LogToggle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checked="false"
                android:showText="true"
                android:splitTrack="false"
                android:text="Log data:"
                android:textColor="@android:color/background_light"
                android:textOff="OFF"
                android:textOn="ON"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
