<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.protocentral.heartypatch">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Needed to download files from dropbox -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <!-- Wifi permissions are only needed if the app needs to turn off wifi to improve ble connections -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Mqtt Service -->
        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <activity
            android:name="com.protocentral.heartypatch.app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullUser">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.protocentral.heartypatch.app.InfoActivity"
            android:label="@string/title_activity_info"
            android:parentActivityName="com.protocentral.heartypatch.app.MainActivity"
            android:screenOrientation="fullUser">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.protocentral.heartypatch.app.MainActivity" />
        </activity>
        <activity
            android:name="com.protocentral.heartypatch.app.ControllerActivity"
            android:label="@string/title_activity_controller"
            android:parentActivityName="com.protocentral.heartypatch.app.MainActivity"
            android:screenOrientation="fullUser">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.protocentral.heartypatch.app.MainActivity" />
        </activity>
        <activity
            android:name="com.protocentral.heartypatch.app.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.protocentral.heartypatch.app.MainActivity"
            android:screenOrientation="fullUser" />
        <activity
            android:name="com.protocentral.heartypatch.app.update.NotificationActivity"
            android:label="@string/dfu_feature_title" />

        <service android:name="com.protocentral.heartypatch.app.update.DfuService" />


        <provider
            android:name="com.protocentral.heartypatch.utils.LegacyCompatFileProvider"
            android:authorities="com.protocentral.heartypatch.le.connect.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />

        </provider>
    </application>

</manifest>